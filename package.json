{
  "name": "github-issue-blog",
  "displayName": "Github Issue Blog",
  "description": "A vscode plugin to create a blog with issue",
  "version": "0.0.3",
  "author": "wtto00",
  "publisher": "wtto00",
  "license": "MIT",
  "packageManager": "pnpm@9.12.1",
  "repository": {
    "url": "https://github.com/wtto00/github-issue-blog",
    "type": "git"
  },
  "sponsor": {
    "url": "https://wtto00.github.io/sponsor/"
  },
  "keywords": [
    "issue",
    "blog",
    "github"
  ],
  "icon": "resources/images/logo.png",
  "engines": {
    "vscode": "^1.82.0"
  },
  "categories": [
    "Notebooks",
    "Other"
  ],
  "activationEvents": [
    "onCommand:github-issue-blog.create",
    "onCommand:github-issue-blog.update",
    "onCommand:github-issue-blog.sync"
  ],
  "main": "./out/extension.js",
  "l10n": "./l10n",
  "contributes": {
    "commands": [
      {
        "command": "github-issue-blog.create",
        "title": "%commands.create%"
      },
      {
        "command": "github-issue-blog.update",
        "title": "%commands.update%"
      },
      {
        "command": "github-issue-blog.sync",
        "title": "%commands.sync%"
      }
    ],
    "menus": {
      "explorer/context": [
        {
          "command": "github-issue-blog.create",
          "group": "1_modification",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "github-issue-blog.update",
          "group": "1_modification",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "github-issue-blog.sync",
          "group": "1_modification",
          "when": "resourceLangId == markdown"
        }
      ],
      "editor/context": [
        {
          "command": "github-issue-blog.create",
          "group": "1_modification",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "github-issue-blog.update",
          "group": "1_modification",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "github-issue-blog.sync",
          "group": "1_modification",
          "when": "resourceLangId == markdown"
        }
      ],
      "editor/title/context": [
        {
          "command": "github-issue-blog.create",
          "group": "1_modification",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "github-issue-blog.update",
          "group": "1_modification",
          "when": "resourceLangId == markdown"
        },
        {
          "command": "github-issue-blog.sync",
          "group": "1_modification",
          "when": "resourceLangId == markdown"
        }
      ]
    },
    "configuration": [
      {
        "type": "object",
        "title": "Github Issue Blog",
        "properties": {
          "github-issue-blog.repo": {
            "type": "string",
            "default": "",
            "markdownDescription": "%configuration.repo%"
          }
        }
      }
    ]
  },
  "scripts": {
    "package": "vsce package",
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "format": "prettier . --write --ignore-unknown",
    "lint": "eslint --color --cache src/*.ts",
    "lint:fix": "npm run lint -- --fix",
    "test": "node ./out/test/runTest.js",
    "prepare": "husky && echo npx lint-staged > .husky/pre-commit"
  },
  "overrides": {
    "eslint": "^9.5.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.1",
    "@types/mocha": "^10.0.8",
    "@types/node": "^22.7.4",
    "@types/vscode": "^1.93.0",
    "@vscode/l10n-dev": "^0.0.35",
    "@vscode/test-electron": "^2.4.1",
    "eslint": "^9.5.0",
    "glob": "^11.0.0",
    "globals": "^15.9.0",
    "husky": "^9.1.6",
    "lint-staged": "^15.2.10",
    "mocha": "^10.7.3",
    "prettier": "^3.3.3",
    "typescript": "^5.6.3",
    "typescript-eslint": "^8.8.0"
  },
  "dependencies": {
    "@octokit/rest": "^21.0.2",
    "@vscode/l10n": "^0.0.18",
    "gray-matter": "^4.0.3",
    "open": "^8.4.2"
  }
}
